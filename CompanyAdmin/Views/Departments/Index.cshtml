@model IEnumerable<CompanyAdmin.Models.Department>

@{
    /**/

    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departments</h2>
@if (!Model.Any())
{
    <p>There are not any Departments yet.</p>
}
else
{
    <table id="departments" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Max Employees</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    @*<td>@department.Name</td>*@
                    <td>@Html.ActionLink(department.Name, "Edit", "Departments", new { id = department.Id }, null)</td>
                    <td>@department.MaxEmployees</td>
                    <td>
                        <button data-department-id="@department.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#departments").on("click", ".js-delete", function () {
                var button = $(this);

                if (confirm("Are you sure you want to delete this department?")) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Departments")',
                        data: { id: button.attr("data-department-id") },
                        method: 'POST',
                        success: function () {
                            button.parents("tr").remove();
                        }
                    });
                }
            });
        });
    </script>
}
